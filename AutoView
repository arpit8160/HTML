    <!-- Custom Alert Modal -->
    <div id="customAlertModal" class="modal">
        <div class="modal-content" style="max-width: 400px; text-align: center; padding-top: 30px;">
            <p id="customAlertMessage" style="font-size: 1.1rem; margin-bottom: 25px; color: #333;"></p>
            <div style="display: flex; justify-content: center; gap: 15px;">
                <button id="customAlertCancelBtn" class="btn"
                    style="background-color: rgb(149, 165, 166); width: auto; min-width: 100px; display: none;">Cancel</button>
                <button id="customAlertOkBtn" class="btn" style="width: auto; min-width: 100px;">OK</button>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script>
        let currentCategory = 'All';
        let carsToCompare = [];

        function setActiveNav(navId) {
            document.querySelectorAll('.nav-links a').forEach(link => link.classList.remove('active'));
            if (navId) document.getElementById(navId).classList.add('active');
        }

        function filterCondition(category) {
            currentCategory = category;
            document.getElementById('searchInput').value = '';
            document.getElementById('brandFilter').value = '';
            filterCars();
            window.scrollTo({ top: 0, behavior: 'smooth' });
            if (category === 'All') setActiveNav('navHome');
            else if (category === 'New') setActiveNav('navNew');
            else if (category === 'Used') setActiveNav('navUsed');
        }

        function toggleCompare(checkbox) {
            const card = checkbox.closest('.car-card');
            if (checkbox.checked) {
                if (carsToCompare.length < 2) {
                    carsToCompare.push(card);
                } else {
                    checkbox.checked = false;
                    showCustomAlert("You can only compare up to 2 cars at a time.");
                }
            } else {
                carsToCompare = carsToCompare.filter(c => c !== card);
            }
            updateCompareBar();
        }

        function updateCompareBar() {
            const compareBar = document.getElementById('compare-bar');
            const compareBtn = document.getElementById('compare-btn');
            const selectedCarsDiv = document.getElementById('selected-cars');

            if (carsToCompare.length > 0) {
                compareBar.style.display = 'flex';
                selectedCarsDiv.innerHTML = '';
                carsToCompare.forEach(car => {
                    const carName = car.querySelector('h5').innerText;
                    const carImgSrc = car.querySelector('.car-image').src;
                    selectedCarsDiv.innerHTML += `
                <div class="selected-car-item">
                    <img src="${carImgSrc}" alt="${carName}">
                    <span>${carName}</span>
                </div>
            `;
                });
            } else {
                compareBar.style.display = 'none';
            }

            compareBtn.innerText = `Compare (${carsToCompare.length}/2)`;
            compareBtn.disabled = carsToCompare.length !== 2;
        }

        function clearComparison() {
            carsToCompare.forEach(card => {
                const checkbox = card.querySelector('.compare-checkbox');
                if (checkbox) checkbox.checked = false;
            });
            carsToCompare = [];
            updateCompareBar();
        }

        function showComparison() {
            if (carsToCompare.length !== 2) {
                showCustomAlert("Please select exactly 2 cars to compare.");
                return;
            }

            const modal = document.getElementById('comparisonModal');
            const container = document.getElementById('comparison-table-container');

            const [car1, car2] = carsToCompare;

            const attributes = [
                { label: 'Image', key: 'image' },
                { label: 'Model', key: 'title' },
                { label: 'Price', key: 'price' },
                { label: 'Engine', 'data-key': 'data-engine' },
                { label: 'Power', 'data-key': 'data-power' },
                { label: 'Mileage', 'data-key': 'data-mileage' },
                { label: 'Seats', 'data-key': 'data-seats' },
                { label: 'Transmission', 'data-key': 'data-transmission' },
                { label: 'Fuel Tank', 'data-key': 'data-tank' },
                { label: 'Ground Clearance', 'data-key': 'data-clearance' },
                { label: 'Boot Space', 'data-key': 'data-boot' },
                { label: 'Body Type', 'data-key': 'data-body' },
                { label: 'Safety Rating', 'data-key': 'data-safety' },
                { label: 'KM Driven', 'data-key': 'data-driven' },
                { label: 'Location', 'data-key': 'data-city' },
            ];

            const getCarData = (car, attr) => {
                if (attr.key === 'image') return `<img src="${car.querySelector('.car-image').src}" style="width:100%; max-width:200px; border-radius: 8px;">`;
                if (attr.key === 'title') return car.querySelector('h5').innerText;
                if (attr.key === 'price') return car.querySelector('.car-price').innerText;
                return car.getAttribute(attr['data-key']) || 'N/A';
            };

            let tableHTML = `<table class="comparison-table" style="width:100%; border-collapse: collapse;"><thead><tr style="background: linear-gradient(to right, rgb(0, 123, 255), rgb(0, 210, 255)); color: white;"><th style="padding: 15px; text-align: left; border: 1px solid #ddd;">Attribute</th><th style="padding: 15px; text-align: center; border: 1px solid #ddd;">${getCarData(car1, { key: 'title' })}</th><th style="padding: 15px; text-align: center; border: 1px solid #ddd;">${getCarData(car2, { key: 'title' })}</th></tr></thead><tbody>`;
            attributes.forEach(attr => {
                if (attr.label === 'Model') return;
                const val1 = getCarData(car1, attr);
                const val2 = getCarData(car2, attr);
                if (val1 === 'N/A' && val2 === 'N/A') return;
                tableHTML += `<tr style="background: ${attributes.indexOf(attr) % 2 === 0 ? '#f9f9f9' : 'white'};"><td style="padding: 12px; font-weight: bold; color: #333; border: 1px solid #ddd;">${attr.label}</td><td style="padding: 12px; text-align: center; border: 1px solid #ddd;">${val1}</td><td style="padding: 12px; text-align: center; border: 1px solid #ddd;">${val2}</td></tr>`;
            });
            tableHTML += '</tbody></table>';
            container.innerHTML = tableHTML;
            modal.style.display = 'block';
        }

        function closeComparisonModal() {
            document.getElementById('comparisonModal').style.display = 'none';
        }

        function handleLogin(e) {
            e.preventDefault();
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('homePage').style.display = 'block';
            filterCondition('All');
            startSlides();
            document.getElementById('authBtn').innerHTML = '<i class="fas fa-user-circle" style="margin-right: 5px;"></i> Logout';
        }

        function handleRegister(e) {
            e.preventDefault();
            showCustomAlert("Registration Successful! Please login.");
            showLogin();
        }

        function showRegister() {
            document.getElementById('loginBox').style.display = 'none';
            document.getElementById('registerBox').style.display = 'block';
        }

        function showLogin() {
            document.getElementById('registerBox').style.display = 'none';
            document.getElementById('loginBox').style.display = 'block';
        }

        function closeLogin() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('homePage').style.display = 'block';
        }

        function logout() {
            const authBtn = document.getElementById('authBtn');
            if (authBtn.innerText.includes('Logout')) {
                showCustomAlert("Are you sure you want to logout?", true, function (confirmed) {
                    if (confirmed) {
                        showCustomAlert("You have been logged out successfully.");
                        authBtn.innerHTML = '<i class="fas fa-user-circle" style="margin-right: 5px;"></i> Login';
                    }
                });
            } else {
                document.getElementById('homePage').style.display = 'none';
                document.getElementById('loginPage').style.display = 'flex';
            }
        }

        function showReviews() {
            document.querySelector('.hero').style.display = 'block';
            document.getElementById('carsSection').style.display = 'block';
            document.getElementById('reviews').style.display = 'block';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'none';
            document.getElementById('reviews').scrollIntoView({ behavior: 'smooth' });
        }

        function showAbout() {
            document.querySelector('.hero').style.display = 'none';
            document.getElementById('carsSection').style.display = 'none';
            document.getElementById('reviews').style.display = 'none';
            document.getElementById('aboutSection').style.display = 'block';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'none';
            setActiveNav(null);
        }

        function showFaq() {
            document.querySelector('.hero').style.display = 'none';
            document.getElementById('carsSection').style.display = 'none';
            document.getElementById('reviews').style.display = 'none';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'block';
            setActiveNav(null);
        }

        function showContact() {
            document.querySelector('.hero').style.display = 'none';
            document.getElementById('carsSection').style.display = 'none';
            document.getElementById('reviews').style.display = 'none';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'block';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'none';
            setActiveNav(null);
        }

        function handleCarInquiry() {
            const carName = document.getElementById('modalTitle').innerText;
            closeModal();
            showContact();
            document.getElementById('contactSubject').value = "Inquiry about " + carName;
        }

        function showTerms() {
            document.querySelector('.hero').style.display = 'none';
            document.getElementById('carsSection').style.display = 'none';
            document.getElementById('reviews').style.display = 'none';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'block';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'none';
            setActiveNav(null);
        }

        function showPrivacy() {
            document.querySelector('.hero').style.display = 'none';
            document.getElementById('carsSection').style.display = 'none';
            document.getElementById('reviews').style.display = 'none';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'block';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'none';
            setActiveNav(null);
        }

        function Feedback() {
            document.querySelector('.hero').style.display = 'none';
            document.getElementById('carsSection').style.display = 'none';
            document.getElementById('reviews').style.display = 'none';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'block';
            document.getElementById('faqSection').style.display = 'none';
            setActiveNav(null);
        }

        function closeFeedback() {
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('homePage').style.display = 'block';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function handleFeedback(e) {
            e.preventDefault();
            showCustomAlert("Thank you for your feedback! We appreciate your input.");
            document.getElementById('feedbackSection').style.display = 'none';
            filterCondition('All');
        }

        function showSellCar() {
            document.querySelector('.hero').style.display = 'none';
            document.getElementById('carsSection').style.display = 'none';
            document.getElementById('reviews').style.display = 'none';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'block';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'none';
            setActiveNav('navSell');
        }

        function handleContact(e) {
            e.preventDefault();
            showCustomAlert("Thank you for contacting us! We will get back to you shortly.");
            document.getElementById('contactSection').style.display = 'none';
            filterCondition('All');
        }

        function handleSellCar(e) {
            e.preventDefault();
            showCustomAlert("Thank you! Your request to sell your car has been submitted. Our team will contact you shortly.");
            document.getElementById('sellCarSection').style.display = 'none';
            filterCondition('All');
        }

        function handleSubscribe(e) {
            e.preventDefault();
            showCustomAlert("Thank you for subscribing to our newsletter!");
            e.target.reset();
        }

        function filterBrand(brandName) {
            currentCategory = 'All';
            const brandSelect = document.getElementById('brandFilter');
            brandSelect.value = brandName;
            filterCars();
            document.querySelector('.car-grid').scrollIntoView({ behavior: 'smooth' });
        }

        function filterCars() {
            const input = document.getElementById('searchInput');
            const brandSelect = document.getElementById('brandFilter');
            const citySelect = document.getElementById('cityFilter');
            const filter = input.value.toUpperCase();
            const brandFilter = brandSelect.value.toUpperCase();
            const cityFilter = citySelect ? citySelect.value.toUpperCase() : '';
            const cards = document.getElementsByClassName('car-card');
            const sectionTitle = document.querySelector('.section-title');
            const hero = document.querySelector('.hero');
            const noResults = document.getElementById('noResults');

            if (currentCategory === 'All' && filter === "" && brandFilter === "" && cityFilter === "") {
                sectionTitle.innerText = "Most Popular Cars";
                if (hero) hero.style.display = 'block';
            } else {
                if (filter !== "") {
                    sectionTitle.innerText = "Search Results";
                } else if (brandFilter !== "") {
                    sectionTitle.innerText = brandSelect.value + " Cars";
                } else if (cityFilter !== "") {
                    sectionTitle.innerText = "Cars in " + citySelect.value;
                } else {
                    sectionTitle.innerText = currentCategory + " Cars";
                }
                if (hero) hero.style.display = 'none';
            }

            // Ensure cars section is visible when filtering
            document.getElementById('carsSection').style.display = 'block';
            document.getElementById('reviews').style.display = 'block';
            document.getElementById('aboutSection').style.display = 'none';
            document.getElementById('contactSection').style.display = 'none';
            document.getElementById('termsSection').style.display = 'none';
            document.getElementById('privacySection').style.display = 'none';
            document.getElementById('sellCarSection').style.display = 'none';
            document.getElementById('feedbackSection').style.display = 'none';
            document.getElementById('faqSection').style.display = 'none';

            let hasResults = false;

            for (let i = 0; i < cards.length; i++) {
                const title = cards[i].getElementsByTagName('h5')[0];
                const cardCondition = cards[i].getAttribute('data-condition');
                const isPopular = cards[i].getAttribute('data-popular') === 'true';
                const cardCity = cards[i].getAttribute('data-city') || '';

                const txtValue = title.textContent || title.innerText;
                const carBrand = txtValue.split(' ')[0].toUpperCase();

                const matchesSearch = txtValue.toUpperCase().indexOf(filter) > -1;
                const matchesBrand = brandFilter === "" || carBrand === brandFilter;
                const matchesCity = cityFilter === "" || cardCity.toUpperCase() === cityFilter;
                let matchesCondition = (cardCondition === currentCategory);
                if (currentCategory === 'All') {
                    matchesCondition = isPopular || filter !== "" || brandFilter !== "" || cityFilter !== "";
                }

                if (matchesCondition && matchesSearch && matchesBrand && matchesCity) {
                    cards[i].style.display = "";
                    hasResults = true;
                } else {
                    cards[i].style.display = "none";
                }
            }

            if (noResults) {
                noResults.style.display = hasResults ? "none" : "block";
            }
        }

        function showCarDetails(card) {
            const authBtn = document.getElementById('authBtn');
            if (!authBtn.innerText.includes('Logout')) {
                showCustomAlert("Please login to view details.");
                document.getElementById('homePage').style.display = 'none';
                document.getElementById('loginPage').style.display = 'flex';
                return;
            }
            const imageSrc = card.querySelector('.car-image').src;
            const title = card.querySelector('h5').innerText;
            const details = card.querySelector('p').innerText;
            const price = card.querySelector('.car-price').innerText;

            // New details
            const engine = card.getAttribute('data-engine') || 'N/A';
            const power = card.getAttribute('data-power') || 'N/A';
            const mileage = card.getAttribute('data-mileage') || 'N/A';
            const seats = card.getAttribute('data-seats') || 'N/A';
            const transmission = card.getAttribute('data-transmission') || 'N/A';
            const tank = card.getAttribute('data-tank') || 'N/A';
            const clearance = card.getAttribute('data-clearance') || 'N/A';
            const boot = card.getAttribute('data-boot') || 'N/A';
            const body = card.getAttribute('data-body') || 'N/A';
            const safety = card.getAttribute('data-safety') || 'N/A';
            const driven = card.getAttribute('data-driven') || 'N/A';
            const city = card.getAttribute('data-city') || 'N/A';

            document.getElementById('modalImage').src = imageSrc;
            document.getElementById('modalTitle').innerText = title;
            document.getElementById('modalDetails').innerText = details;
            document.getElementById('modalPrice').innerText = price;

            document.getElementById('modalEngine').innerText = engine;
            document.getElementById('modalPower').innerText = power;
            document.getElementById('modalMileage').innerText = mileage;
            document.getElementById('modalSeats').innerText = seats;
            document.getElementById('modalTransmission').innerText = transmission;
            document.getElementById('modalTank').innerText = tank;
            document.getElementById('modalClearance').innerText = clearance;
            document.getElementById('modalBoot').innerText = boot;
            document.getElementById('modalBody').innerText = body;
            document.getElementById('modalSafety').innerText = safety;
            document.getElementById('modalDriven').innerText = driven;
            document.getElementById('modalCity').innerText = city;

            document.getElementById('carModal').style.display = "block";
        }

        function showCustomAlert(message, isConfirm = false, callback) {
            const modal = document.getElementById('customAlertModal');
            const msgElement = document.getElementById('customAlertMessage');
            const okBtn = document.getElementById('customAlertOkBtn');
            const cancelBtn = document.getElementById('customAlertCancelBtn');

            msgElement.innerText = message;
            modal.style.display = "block";

            if (isConfirm) {
                cancelBtn.style.display = "inline-block";
                cancelBtn.onclick = function () {
                    modal.style.display = "none";
                    if (callback) callback(false);
                };
            } else {
                cancelBtn.style.display = "none";
            }

            okBtn.onclick = function () {
                modal.style.display = "none";
                if (callback) callback(true);
            };
        }

        function closeModal() {
            document.getElementById('carModal').style.display = "none";
        }

        window.onclick = function (event) {
            const modal = document.getElementById('carModal');
            const comparisonModal = document.getElementById('comparisonModal');
            if (event.target == modal) {
                modal.style.display = "none";
            }
            if (event.target == comparisonModal) {
                comparisonModal.style.display = "none";
            }
        }

        let slideIndex = 1;
        let slideTimer;

        function startSlides() {
            if (slideTimer) clearInterval(slideTimer);
            showSlides(slideIndex);
            slideTimer = setInterval(function () { plusSlides(1) }, 3000);
        }

        function plusSlides(n) {
            clearInterval(slideTimer);
            showSlides(slideIndex += n);
            slideTimer = setInterval(function () { plusSlides(1) }, 3000);
        }

        function showSlides(n) {
            let i;
            let slides = document.getElementsByClassName("mySlides");
            if (slides.length === 0) return;
            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            slides[slideIndex - 1].style.display = "block";
        }

        // Initialize home page
        startSlides();
        filterCondition('All');

        function toggleFaq(element) {
            element.classList.toggle('active');
            const answer = element.nextElementSibling;
            answer.classList.toggle('active');
        }
    </script>
</body>

</html>
